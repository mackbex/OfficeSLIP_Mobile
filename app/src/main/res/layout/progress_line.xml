<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/view_textProgressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_send_log"
        android:textColor="@color/colorDefaultText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="18dp"
       />

    <TextView
        android:id="@+id/view_textProgressContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_log_progress_contents_default"
        android:textColor="@color/colorDefaultText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_textProgressTitle"
        app:layout_constraintBottom_toBottomOf="@id/view_textProgressTitle"
        android:layout_margin="10dp"
        />

    <ProgressBar
        app:layout_constraintTop_toBottomOf="@id/view_textProgressTitle"
        android:id="@+id/view_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:progress="0"/>

</android.support.constraint.ConstraintLayout>