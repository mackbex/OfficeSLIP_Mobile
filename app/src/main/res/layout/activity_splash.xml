<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:background="@color/white"
    tools:context="com.sgenc.officeslip.com.officeslip.View.Splash.SplashActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/view_imageLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_splash"
        />

    <LinearLayout
        android:id="@+id/view_layoutProgress"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_imageLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ProgressBar
            android:id="@+id/view_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/view_textSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checking_application_update"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>