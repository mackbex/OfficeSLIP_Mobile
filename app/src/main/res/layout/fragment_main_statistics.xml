<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="MAIN_STATISTICS"
    android:background="@color/colorViewBackground">
    <android.support.v7.widget.Toolbar
        android:id="@+id/view_toolbarStatistics"
        popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="#ffffff"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.balysv.materialripple.MaterialRippleLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:mrl_rippleColor="@color/white"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDimension="14dp"
                app:mrl_rippleDelayClick="false"
                >
                <ImageButton
                    android:id="@+id/view_btnNavi"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTransparent"
                    android:textColor="@color/colorActionBtnDefault"
                    android:src="@drawable/list"
                    android:scaleType="fitCenter"
                    android:tag="OPEN_NAVI"
                    />

            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab_slip_statistics"
                android:textColor="@color/colorActionBtnDefault"
                android:textSize="20sp"
                android:id="@+id/toolbar_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                app:mrl_rippleColor="@color/white"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleDimension="14dp"
                app:mrl_rippleDelayClick="false"
                >
                <ImageButton
                    android:id="@+id/view_btnSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorActionBtnDefault"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:tag="SEARCH_STATS"
                    />

            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/view_swipeLayoutStatistics"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/view_toolbarStatistics"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_recyclerResultStatistics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/view_toolbarStatistics"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>