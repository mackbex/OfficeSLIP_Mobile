<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/view_layoutStats"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/view_cardStatsList"
        app:layout_constraintTop_toBottomOf="@id/view_slipController"
        android:layout_margin="2dp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
           android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/view_textItemTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/colorBtnNormal"
                android:textColor="@color/white"
                android:tag="THUMB_TITLE"
                android:layout_height="30dp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/view_layoutRow0"
                app:layout_constraintTop_toBottomOf="@id/view_textItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/view_textTitleStep0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/view_textValueStep0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="40dp"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toRightOf="@id/view_textTitleStep0"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/view_textTitleStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_constraintRight_toLeftOf="@id/view_textValueStep1"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/view_textValueStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxWidth="40dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/view_layoutRow1"
                app:layout_constraintTop_toBottomOf="@id/view_layoutRow0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/view_textTitleStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/view_textValueStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="40dp"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toRightOf="@id/view_textTitleStep2"
                    />
                <TextView
                    android:layout_marginEnd="10dp"
                    android:id="@+id/view_textTitleStep9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_constraintRight_toLeftOf="@id/view_textValueStep9"
                    />
                <TextView
                    android:id="@+id/view_textValueStep9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxWidth="40dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

            
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>