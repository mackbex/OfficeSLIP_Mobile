<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:background="@drawable/border_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/view_btnRemoveHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/remove_favorite"
        android:background="@color/transparent"
        android:textColor="@drawable/font_btn_remove"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/view_textUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/view_textUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/view_textUserName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/view_imageUserChecked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/check"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>